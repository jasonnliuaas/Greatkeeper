<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/listBg"
    android:gravity="top|center_horizontal" >
    
    <include layout="@layout/top_view2" />
    
    
    <LinearLayout  
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector"
        android:layout_marginTop="35dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:id="@+id/layout_RegisterMobile"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:gravity="center"  >
        
        <TextView
            android:id="@+id/btnRegisterMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/register_phone"
            android:text="@string/regByMobile"
            android:textColor="@color/white"
            android:textSize="18sp" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector"
        android:layout_marginTop="25dp"
        android:id="@+id/layout_RegisterEmail"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:gravity="center" >
        
        <TextView
            android:id="@+id/btnRegisterEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/register_email"
            android:text="@string/regByEmail"
            android:background="@drawable/btn_bg_selector"
            android:textColor="@color/white"
            android:textSize="18sp" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:layout_marginTop="35dp" >
       	
        <CheckBox 
            android:id="@+id/checkAgreeMent" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingRight="2dp"
            android:background="@drawable/check_box_bg"
            android:button="@null"
            android:checked="false" />
        <TextView 
            android:id="@+id/textAgreeMent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/iAgreeMent"
            android:textSize="@dimen/textSizeMinor"
            android:gravity="center"
            android:textColor="@color/textGray"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />
        
    </LinearLayout>
    
</LinearLayout>
