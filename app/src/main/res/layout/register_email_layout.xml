<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/listBg" >
    
    <include layout="@layout/top_view2" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@color/white" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp" >
            
            <TextView
                android:id="@+id/labEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labEmail"
                android:textColor="@color/textGray1"
                android:textSize="@dimen/textSizeMain" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/clarity"
                android:hint="@string/hintEmail"
                android:inputType="textEmailAddress"
                android:labelFor="@id/labEmail"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="@dimen/textSizeMinor" />
            
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent" 
            android:layout_height="1dp"
            android:background="@color/lineColor" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp" >
            
            <TextView
                android:id="@+id/labPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labPwd"
                android:textColor="@color/textGray1"
                android:textSize="@dimen/textSizeMain" />

            <EditText
                android:id="@+id/editPwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/clarity"
                android:hint="@string/hintPwd"
                android:inputType="textPassword"
                android:labelFor="@id/labPwd"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="@dimen/textSizeMinor" />
            
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent" 
            android:layout_height="1dp"
            android:background="@color/lineColor" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp" >
            
            <TextView
                android:id="@+id/labPwd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labPwd"
                android:textColor="@color/textGray1"
                android:textSize="@dimen/textSizeMain" />

            <EditText
                android:id="@+id/editPwd1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/clarity"
                android:hint="@string/hintPwd1"
                android:inputType="textPassword"
                android:labelFor="@id/labPwd"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="@dimen/textSizeMinor" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <Button 
        android:id="@+id/btnSendVEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector"
        android:text="@string/sendVEmail"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeMain"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp" />
    
</LinearLayout>
