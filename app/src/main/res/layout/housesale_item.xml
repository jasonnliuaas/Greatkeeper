         <TextView android:layout_height="0dp" android:layout_width="wrap_content"  android:layout_marginTop="5dp"  android:layout_marginBottom="2dp" android:layout_weight="1"  android:id="@+id/house_name"  style="@style/HouseSale_item_bigtext" />
        <TextView android:layout_height="0dp" android:layout_width="wrap_content"   android:layout_marginTop="2dp"  android:layout_marginBottom="2dp" android:layout_weight="1"  android:id="@+id/house_address" style="@style/HouseSale_item_smalltext" />
        <TextView android:layout_height="0dp" android:layout_width="wrap_content"   android:layout_marginTop="2dp"  android:layout_marginBottom="2dp" android:layout_weight="1"  android:id="@+id/house_type" style="@style/HouseSale_item_smalltext" />
