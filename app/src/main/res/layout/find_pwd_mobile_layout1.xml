<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/listBg" >
    
    <include layout="@layout/top_view2" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_mobile_reg2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:contentDescription="@string/empty"
        android:background="#fafafa" />

    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_white_bg"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp" >
            
            <TextView
                android:id="@+id/labMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labMobile"
                android:textColor="@color/textGray1"
                android:textSize="@dimen/textSizeMain" />

            <TextView 
                android:id="@+id/textMobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1" 
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textColor="@color/textGray1"
                android:textSize="@dimen/textSizeMain" />
            
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent" 
            android:layout_height="1dp"
            android:background="@color/orange" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp" >
            
            <TextView
                android:id="@+id/labVcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labVcode"
                android:textColor="@color/textGray1"
                android:textSize="@dimen/textSizeMain" />

            <EditText
                android:id="@+id/editVcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/clarity"
                android:hint="@string/hintVcode"
                android:inputType="number"
                android:labelFor="@id/labVcode"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="@dimen/textSizeMinor" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <Button 
        android:id="@+id/btnNextStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_orange_bg"
        android:text="@string/nextStep"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeMain"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp" />
    
</LinearLayout>
