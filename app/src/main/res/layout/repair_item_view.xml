<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
                android:paddingRight="15dp"
    android:background="@color/white">
    
    <ImageView
        android:id="@+id/imgIcRepair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/empty"
        android:src="@drawable/ic_repair" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_left"
        android:layout_toRightOf="@id/imgIcRepair"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textRepairName"
                android:text="@string/maintenance_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textSizeMain" />

            <TextView
                android:id="@+id/textRepairState"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/textSizeMinor"
                android:text="未确认"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/textHouseAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.5dp"
            android:ellipsize="end"
            android:maxEms="18"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textSize="@dimen/textSizeMinor" />

    </LinearLayout>




</RelativeLayout>
