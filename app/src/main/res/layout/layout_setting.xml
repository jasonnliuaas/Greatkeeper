<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/listBg"
    tools:context="com.newline.housekeeper.activity.SettingActivity">

    <include layout="@layout/top_view2" />

    <!-- 语言 -->
    <RelativeLayout
        android:id="@+id/layoutBtnLanguage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:onClick="onClick" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="1dip"
            android:contentDescription="@string/empty"
            android:src="@color/lineColor" />

        <ImageView
            android:id="@+id/imgLab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/centerMarginLeft"
            android:contentDescription="@string/empty"
            android:src="@drawable/btn_language" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/centerSpacing"
            android:layout_toRightOf="@id/imgLab1"
            android:textColor="@color/centerTextColor"
            android:textSize="@dimen/centerTextSize"
            android:text="@string/language" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/centerSpacing"
            android:layout_toLeftOf="@+id/imgLanguageright"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_language"
            android:textColor="@color/centerTextColor"
            android:textSize="@dimen/centerTextSize"
            android:text="@string/simplified_Chinese" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/centerMarginRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:id="@+id/imgLanguageright"
            android:contentDescription="@string/empty" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dip"
            android:contentDescription="@string/empty"
            android:paddingLeft="48dip"
            android:src="@color/lineColor" />

    </RelativeLayout>

    <!-- 币种-->
    <RelativeLayout
        android:id="@+id/layoutBtnBizhong"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:onClick="onClick" >

        <ImageView
            android:id="@+id/imgLab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/centerMarginLeft"
            android:contentDescription="@string/empty"
            android:src="@drawable/btn_bizhong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/centerSpacing"
            android:layout_toRightOf="@id/imgLab2"
            android:textColor="@color/centerTextColor"
            android:textSize="@dimen/centerTextSize"
            android:text="@string/moreCurrency" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/centerSpacing"
            android:layout_toLeftOf="@+id/imgCurrenyright"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_current"
            android:textColor="@color/centerTextColor"
            android:textSize="@dimen/centerTextSize"
            android:text="@string/USD" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/centerMarginRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:id="@+id/imgCurrenyright"
            android:contentDescription="@string/empty" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dip"
            android:contentDescription="@string/empty"
            android:src="@color/lineColor" />

    </RelativeLayout>

</LinearLayout>
